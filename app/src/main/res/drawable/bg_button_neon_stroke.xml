<?xml version="1.0" encoding="utf-8"?>
<!-- Neon gradient stroke for Google button: 32dp corner radius - Enhanced visibility -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow - Pink (bottom-right) -->
    <item
        android:left="8dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#EFCAEE" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- Outer shadow - Cyan (top-left) -->
    <item
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#BCE9E6" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- White background with thin border -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="32dp" />
            <stroke
                android:width="0.3dp"
                android:color="#D9D9D9" />
        </shape>
    </item>
</layer-list>
