<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base gradient: White to Cyan (#BBFFF8) at angle ~153Â° (bottom-left to top-right) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFFFF"
                android:endColor="#FFBBFFF8"
                android:angle="315"
                android:type="linear" />
        </shape>
    </item>

    <!-- Overlay gradient: Pink 20% opacity (#33FF00E1) from top, transparent at bottom -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33FF00E1"
                android:endColor="#00000000"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>

</layer-list>